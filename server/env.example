# Server Port
PORT=5002

# MongoDB Atlas URL (우선 사용)
# MongoDB Atlas를 사용하는 경우 아래 주소를 설정하세요
# 비밀번호에 특수문자(@, ! 등)가 포함된 경우 URL 인코딩 필요
# @ → %40, ! → %21
# MONGODB_ATLAS_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# MONGODB_ATLAS_URL이 없을 경우 로컬 MongoDB 사용
# 로컬 MongoDB 주소: mongodb://localhost:27017/shoping-mall

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h

# PortOne (Iamport) REST API
# PortOne 콘솔에서 발급받은 REST API Key와 Secret을 입력하세요
PORTONE_REST_API_KEY=your_portone_rest_api_key
PORTONE_REST_API_SECRET=your_portone_rest_api_secret

# Client URL (CORS 설정용)
# 프로덕션 환경에서 허용할 클라이언트 URL
# 여러 URL은 쉼표로 구분: https://app1.vercel.app,https://app2.vercel.app
# CLIENT_URL=https://your-client-app.vercel.app

